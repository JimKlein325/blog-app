{{#if isInEditMode}}
<h4>Edit mode</h4>
<div>
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      {{input value=name placeholder=comment.name}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date placeholder=comment.date}}
    </div>

    <div class="form-group">
      <label for="body">Body</label>
      {{input value=body placeholder=comment.body}}
    </div>

    <button {{action 'update1' comment}}>Update</button>

  </form>
</div>
{{else}}
  <div class="update">
    <button {{action 'updateCommentForm'}}>Edit Comment</button>
  </div>
{{/if}}
<div class="delete">
  <button {{action 'delete1' delete1="delete2"}}>Delete Comment</button>
</div>
