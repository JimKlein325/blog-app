{{#if updatePostForm}}
<h1>Update Post</h1>
<div>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date"}}
    </div>

    <div class="form-group">
      <label for="body">Body</label>
      {{textarea cols="80" rows="6" value=body id="body" placeholder=story.body}}
    </div>

    <button {{action 'update1' post}}>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'updatePostForm'}}>Update</button>
{{/if}}
