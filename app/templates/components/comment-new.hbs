<h1>New Comment</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name"}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date"}}
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        {{textarea cols="80" rows="6" value=body id="body"}}
      </div>

      <button {{action 'save1'}}>Save</button>
    </form>
  </div>
